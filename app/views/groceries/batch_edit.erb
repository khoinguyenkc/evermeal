
<div class="center-wrapper">

<div class="main-content">

<div class="batchedit-groceries">


<h2>Batch edit groceries</h2>
<form action="/groceries/batch" method="POST">
<input type="hidden" name="_method" value="patch">

<input name="name" type="hidden" value="">


<% @grocery_items.each do | item | %>
    Name: (required) <input name="[items][][name]" value="<%= item.name %>" ><br>
    Amount: <input name="[items][][amount]"  value="<%= item.amount %>" > <br>
    <br>
    <% end %>

    <% 15.times {  %>

    Name: (required) <input name="[items][][name]" ><br>
    Amount: <input name="[items][][amount]" > <br>
    <br>
    <% } %>
    
<input class="button-link" type="submit" value="Save Changes">
</form>

</div> <!-- end class batchedit-groceries -->

</div> <!-- end class main content -->
</div> <!-- end class center wrapper -->




