




<div class="center-wrapper">

<div class="main-content">

<div class="searchresults-recipes">

<h3>
Recipes that contain <%= @searchquery %> as ingredients:
</h3>

<% if !@resultarray.empty? %> 

<div class="celled-list">

<% @resultarray.each do | ing | %>
    <% ing.recipes.each do | recipe | %>
        <div class="item">
        <a href="/recipes/<%= recipe.id  %>"><%= recipe.name %></a>
        </div> <!-- end class item -->
    <% end %>

<% end %>


</div> <!-- end class celledlist -->
 <% else %> 
 There is no "<%= @searchquery %>" item found in your kitchen cabinets. 
<% end %> 



</div> <!-- end class searchresults-recipes -->

</div> <!-- end class main content -->
</div> <!-- end class center wrapper -->
